{
    "name": "saddinamo/highcharts",
    "description": "Highcharts JS widget for Yii2.",
    "type": "yii2-extension",
    "keywords": [
        "yii",
        "yii2",
        "yii 2",
        "extension",
        "widget",
        "chart",
        "highcharts"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Saddinamo",
            "email": "saddinamo@yandex.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "yiisoft/yii2": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "friendsofphp/php-cs-fixer": "^2.0",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "saddinamo\\highcharts\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "fxp-asset": {
            "installer-paths": {
                "bower-asset-library": "vendor/bower"
            },
            "vcs-driver-options": {
                "github-no-api": true
            },
            "git-skip-update": "2 days",
            "pattern-skip-version": "(-build|-patch)"
        }
    }
}
